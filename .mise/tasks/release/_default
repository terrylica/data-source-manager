#!/usr/bin/env bash
#MISE description="Show release task help"

echo "Release Tasks:"
echo ""
echo "  mise run release:full      # Complete 4-phase release workflow"
echo "  mise run release:dry       # Dry-run (preview changes, no release)"
echo "  mise run release:preflight # Phase 1: Validate prerequisites"
echo "  mise run release:version   # Phase 2: Run semantic-release"
echo "  mise run release:verify    # Phase 4: Verify release artifacts"
echo "  mise run release:status    # Show current version info"
echo ""
echo "Workflow: preflight → version → verify"
