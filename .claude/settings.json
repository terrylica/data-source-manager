{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Write",
      "Write(**)",
      "Edit(**)",
      "Read",
      "Grep",
      "Glob",
      "Task",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(.mise.local.toml)",
      "Read(**/*.key)",
      "Read(**/secrets/**)",
      "Read(**/*credential*)",
      "Read(~/.ssh/id_*)",
      "Read(~/.ssh/*_rsa)",
      "Read(~/.ssh/*_ed25519)",
      "Read(~/.aws/credentials)",
      "Read(~/.config/gh/hosts.yml)",
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(curl * | *)",
      "Bash(pip install *)",
      "Bash(pip uninstall *)",
      "Bash(git push --force *)",
      "Bash(git push -f *)",
      "Bash(git reset --hard *)",
      "Bash(git clean -f *)",
      "Bash(pyenv *)",
      "Bash(python3.14 *)",
      "Bash(python3.12 *)",
      "Bash(python3.11 *)"
    ],
    "ask": [],
    "additionalDirectories": []
  },
  "env": {
    "PYTHONDONTWRITEBYTECODE": "1"
  },
  "extraKnownMarketplaces": {
    "cc-skills": {
      "source": {
        "source": "github",
        "repo": "terrylica/cc-skills"
      }
    }
  },
  "respectGitignore": true
}
