{
  "$schema": "https://code.claude.com/hooks/schema.json",
  "description": "DSM-specific hooks for data-source-manager",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/dsm-bash-guard.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PROJECT_ROOT}/.claude/hooks/dsm-code-guard.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
